mixin actionCarousel(id, id1, id2)
  -let title = 0
  while (title++ < 3)
    div(class=`${title == 1 ? 'btnDesktop' : ''} ${title == 2 ? 'btnTablet' : ''} ${title == 3 ? 'btnPhone' : ''} carosel-action-container d-lfex `)
        a(href=`#${title == 1 ? 'carouselProduct'+id :`${title==2 ? 'carouselProduct'+id1 : 'carouselProduct'+id2}`}` data-slide="prev")
            i.fas.fa-caret-left
        a(href=`#${title == 1 ? 'carouselProduct'+id :`${title==2 ? 'carouselProduct'+id1 : 'carouselProduct'+id2}`}` data-slide="next")
            i.fas.fa-caret-right

