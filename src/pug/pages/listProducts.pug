extend ../base/base.pug
block content
  section.listproduct 
    .container 
      -let listBreadcrumb = [{link: "/", name:"Trang chủ"}, {name:"Danh mục sản phẩm"}]; 
      +breadcrumb(listBreadcrumb)
      .row 
        .col-xl-3.col-lg-3.col-md-12.col-sm-12.col-12 
          .listproduct__catigory 
            +Category("DANH MỤC SẢN PHẨM", "category1", "fas fa-th-large", "fas fa-th-large", listFilter, false)
            +Category("TÌM THEO MỨC GIÁ", "category2", "fas fa-dollar-sign", "fas fa-th-large", softPrice, false)
            +Category("TÌM THEO MÀU SẮC", "category3", "fas fa-paint-brush", "fas fa-th-large", softPrice, true)
            +Category2("SẢN PHẨM KHUYẾN MÃI", "category4", "fas fa-gift", newProduct2)
        .col-xl-9.col-lg-9.col-md-12.col-sm-12.col-12
          .listproduct__main 
            .listproduct__main__action   
              .form-group.d-flex
                label(for='exampleFormControlSelect1') Sắp xếp theo:
                select#exampleFormControlSelect1.form-control
                  option Tên sản phẩm
                  option Sản phẩm 1
                  option Sản phẩm 2
                  option Sản phẩm 3
              .form-group.d-flex
                label(for='exampleFormControlSelect2') Show:
                select#exampleFormControlSelect3.form-control
                  option 0
            .listproduct__main__content 
              ul.nav.nav-tabs.listproduct__main__content__link
                li
                  a.active(data-toggle='tab', href='#home')
                    i(class="fas fa-th")
                li
                  a(data-toggle='tab', href='#menu1')
                    i(class="fas fa-bars")
              .tab-content
                #home.tab-pane.fade.in.active
                  .row 
                    each item in products 
                      .col-xl-4.col-lg-4.col-md-6.col-sm-12.col-12
                        +product(item)
                    each item,index in products 
                      if index < 6
                        .col-xl-4.col-lg-4.col-md-6.col-sm-12.col-12
                          +product(item)
                #menu1.tab-pane.fade
                  .row 
                    each item,index in newProduct2 
                      if index < 10
                        .col-xl-12.col-lg-12.col-md-12.col-sm-12.col-12
                          +product-2(item)
      .row
        .col-xl-12.col-lg-12.col-md-12.col-sm-12
          .listproduct__pagination
            +pagination()             